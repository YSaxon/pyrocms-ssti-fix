{
    "name": "ysaxon/pyro-ssti-hotfix",
    "description": "Security hotfix for PyroCMS SSTI vulnerability (CVE-2023-29689). Applies Twig sandbox to user-editable templates.",
    "keywords": ["pyrocms", "security", "ssti", "twig", "sandbox", "hotfix"],
    "license": "MIT",
    "authors": [
        {
            "name": "Yaakov Saxon",
            "email": "ysaxon@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "twig/twig": "^2.16 || ^3.9",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0"
    },
    "autoload": {
        "psr-4": {
            "YSaxon\\PyroSstiHotfix\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YSaxon\\PyroSstiHotfix\\HotfixServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
